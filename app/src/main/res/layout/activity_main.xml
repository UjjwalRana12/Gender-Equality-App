<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/regis_tv_username"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:textColorHint="@color/tertiary"
        android:paddingLeft="12sp"
        android:background="@drawable/message_box_background"
        android:ems="10"
        android:hint="Username"
        android:inputType="text"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_save_btn" />

    <EditText
        android:id="@+id/regis_tv_email"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:paddingLeft="12sp"
        android:layout_marginTop="24dp"
        android:textColorHint="@color/tertiary"
        android:background="@drawable/message_box_background"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/regis_tv_username"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/regis_tv_username"
        app:layout_constraintTop_toBottomOf="@+id/regis_tv_username" />

    <EditText
        android:id="@+id/regis_tv_pass"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:layout_marginTop="28dp"
        android:paddingLeft="12sp"
        android:background="@drawable/message_box_background"
        android:ems="10"
        android:hint="password"
        android:textColorHint="@color/tertiary"
        android:inputType="textPassword"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/regis_tv_username"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/regis_tv_username"
        app:layout_constraintTop_toBottomOf="@+id/regis_tv_email" />

    <Button
        android:id="@+id/regis_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/yellow"
        android:text="Login"
        app:layout_constraintEnd_toEndOf="@+id/regis_tv_pass"
        app:layout_constraintStart_toStartOf="@+id/regis_tv_pass"
        app:layout_constraintTop_toBottomOf="@+id/regis_tv_pass" />

    <TextView
        android:id="@+id/regis_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_marginTop="44dp"
        android:text="already have an account?"
        app:layout_constraintEnd_toEndOf="@+id/regis_button"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="@+id/regis_button"
        app:layout_constraintTop_toBottomOf="@+id/regis_button" />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_save_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="56dp"
        android:src="@drawable/set_login_icon"
        android:background="@color/white"
        app:civ_border_color="@color/yellow"
        app:civ_border_width="2dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>